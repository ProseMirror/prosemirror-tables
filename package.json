{
  "name": "prosemirror-tables",
  "type": "module",
  "version": "1.8.1",
  "packageManager": "pnpm@10.24.0",
  "description": "ProseMirror's rowspan/colspan tables component",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/prosemirror/prosemirror-tables.git"
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "style": "style/tables.css",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./style/tables.css": "./style/tables.css"
  },
  "files": [
    "style",
    "dist"
  ],
  "scripts": {
    "dev": "vite demo",
    "build_demo": "vite build demo",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "build": "tsdown",
    "watch": "tsdown --watch",
    "build_readme": "builddocs --name tables --format markdown --main src/README.md src/*.js > README.md",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check . && tsc --noEmit",
    "fix": "eslint --fix . && prettier --write ."
  },
  "dependencies": {
    "prosemirror-keymap": "^1.2.2",
    "prosemirror-model": "^1.25.0",
    "prosemirror-state": "^1.4.3",
    "prosemirror-transform": "^1.10.3",
    "prosemirror-view": "^1.41.4"
  },
  "devDependencies": {
    "@ocavue/eslint-config": "^3.7.1",
    "@ocavue/tsconfig": "^0.6.2",
    "@vitest/coverage-v8": "3.1.1",
    "builddocs": "^1.0.7",
    "eslint": "^9.39.1",
    "happy-dom": "^16.8.1",
    "ist": "^1.1.7",
    "pkg-pr-new": "^0.0.57",
    "prettier": "^3.5.3",
    "prosemirror-commands": "^1.7.1",
    "prosemirror-example-setup": "^1.2.3",
    "prosemirror-gapcursor": "^1.3.2",
    "prosemirror-menu": "^1.2.4",
    "prosemirror-schema-basic": "^1.2.4",
    "prosemirror-test-builder": "^1.1.1",
    "tsdown": "^0.16.8",
    "typescript": "^5.7.3",
    "vite": "^6.2.6",
    "vitest": "^3.1.1"
  },
  "maintainers": [
    {
      "name": "Eduard Shvedai",
      "email": "eshvedai@atlassian.com"
    },
    {
      "name": "Huanhuan Huang",
      "email": "hhuang@atlassian.com"
    },
    {
      "name": "Ocavue",
      "email": "ocavue@gmail.com"
    }
  ]
}
